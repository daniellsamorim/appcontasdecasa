<aluguelpage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        #TITULO CADASTRO CONTAS FIXAS
        MDLabel:
            pos_hint: {"right": 0.95, "top": 1}
            size_hint: 0.85, 0.1
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: "Cadastro mes de: "
            markup: True
            id: label_aviso_aluguel

        #CAMPO ALUGUEL
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.90}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Aluguel"
                id: preco_aluguel

        #CAMPO CONDOMINIO
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.80}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Condomínio"
                id: preco_condominio

        #CAMPO AGUA
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.70}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Água"
                id: preco_agua


        #BARRA CHECK CONDOMINIO
        MDFloatLayout:
            pos_hint: {"right": 0.9, "top": 0.6}
            size_hint: 0.8, 0.050

            MDLabel:
                pos_hint: {"right": 1, "top": 0.6}
                size_hint: 1, 0.050
                text: "Condominio incluso"
                halign: 'left'
                valign: 'middle'
            MDSwitch:
                active: False
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .8, 'center_y': .5}
                id: check_cond

        #BARRA CHECK AGUA
        MDFloatLayout:
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.050

            MDLabel:
                pos_hint: {"right": 1, "top": 0.6}
                size_hint: 1, 0.050
                text: "Água inclusa"
                halign: 'left'
                valign: 'middle'
            MDSwitch:
                active: False
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .8, 'center_y': .5}
                id: check_agua

        #BOTAO CONFIRMAR E SALVAR
        MDRaisedButton:
            text: "Confirmar e salvar"
            pos_hint: {"right": 0.90, "top": 0.48}
            size_hint: 0.8, 0.08
            on_release: app.calcular_pag_aluguel()

        #PAINEL CONTAS FIXAS
        MDFloatLayout:
            pos_hint: {"right": 0.97, "top": 0.37}
            size_hint: 0.94, 0.25
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006d7e")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 30, 00, 30, 00

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.75}
                size_hint: 0.8, 0.1
                text: "Aluguel a pagar: R$ 0.00"
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                id: label_aluguel

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.55}
                size_hint: 0.8, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Condominio a pagar: R$ 0.00"
                id: label_cond

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.35}
                size_hint: 0.8, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Água a pagar: R$ 0.00"
                id: label_agua




    #BOTAO SAIR
    MDRaisedButton:
        text: "Sair"
        on_release: app.mudar_tela("homepage")
        pos_hint: {"center_x": .5, "center_y": .05}
        size_hint: 1, 0.10













