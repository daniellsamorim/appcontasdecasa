<ConfigPage>:
    MDFloatLayout:

        #TITULO DA PÁGINA DE CONFIGURAÇÕES
        MDFloatLayout:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.08
            radius: [0, 0, 70, 70]
            md_bg_color: app.theme_cls.primary_color

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.5}
                size_hint: 0.8, 0.07
                text: "[color=#000000]Configurações[/color]"
                markup: True
                font_style: "H5"
                halign: 'center'
                valign: 'middle'

        #BARRA TEMA
        MDFloatLayout:
            pos_hint: {"right": 0.9, "top": 0.88}
            size_hint: 0.8, 0.050
            line_color: (1, 0, 0, 1)
            radius: [5, 5, 5, 5]

            MDLabel:
                pos_hint: {"right": 1, "top": 0.6}
                size_hint: 1, 0.050
                text: "[color=#F69C09]Tema claro[/color]"
                markup: True
                halign: 'center'
                valign: 'middle'
            MDSwitch:
                active: False
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .8, 'center_y': .5}
                id: check_tema
                on_active: app.tema("Light", 'BlueGray') if (self.active == True) else app.tema("Dark", "Orange")


        #CADASTRAR USUÁRIOS
        MDRaisedButton:
            text: "Alterar nomes usuários"
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.10
            icon: "badge-account-horizontal"
            line_color: (1, 0, 0, 1)
            on_release: app.seta_nomes_usuarios()

        #ESCOLHER FOTO PERFIL
        MDRaisedButton:
            text: "Alterar foto perfil (Breve)"
            pos_hint: {"right": 0.9, "top": 0.65}
            size_hint: 0.8, 0.10
            icon: "account-box-multiple"
            line_color: (1, 0, 0, 1)
            disabled: True
            on_release: app.mudar_tela("fotoperfilpage")

        #FAZER LOGOFF
        MDRaisedButton:
            pos_hint: {"right": 0.9, "top": 0.5}
            size_hint: 0.8, 0.10
            icon: "logout"
            line_color: (1, 0, 0, 1)
            text: "Fazer logoff"
            on_release: app.show_alert_dialog()

        #EXCLUIR CONTA
        MDRaisedButton:
            pos_hint: {"right": 0.9, "top": 0.35}
            size_hint: 0.8, 0.10
            icon: "account-cancel"
            line_color: (1, 0, 0, 1)
            text: "Excluir conta"
            on_release: app.mudar_tela("excluirconta")


    #BOTAO SAIR
    MDRaisedButton:
        text: "Sair"
        on_release: app.mudar_tela("homepage")
        pos_hint: {"center_x": .5, "center_y": .05}
        size_hint: 1, 0.10
