<ScrollPage>:
    MDFloatLayout:
        #TITULO
        MDLabel:
            pos_hint: {"right": 0.85, "top": 1}
            size_hint: 0.7, 0.07
            text: "[color=#00CFDB]Relatorio de:[/color] User"
            markup: True
            halign: 'center'
            valign: 'middle'
            id: pgmt_user

        MDLabel:
            pos_hint: {"right": 0.85, "top": 0.96}
            size_hint: 0.7, 0.07
            text: "Registrar em mes/ano"
            font_style: "Overline"
            markup: True
            halign: 'center'
            valign: 'middle'
            id: pgmt_mes


        #TITULO BARRA DE DESPESAS
        MDLabel:
            pos_hint: {"right": 0.85, "top": 0.92}
            size_hint: 0.7, 0.1
            text: "Total despesas casa: 0.00"
            font_size: 14
            id: lbl_soma_pgm

        #BARRA DE TITULOS DESPESAS
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.99, "top": 0.85}
            size_hint: 0.98, 0.035
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006d7e")
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDLabel:
                text: "Cod"
                pos_hint: {"right": 0.1, "top": 0.53}
                size_hint: 0.01, 0.2
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Descrição"
                pos_hint: {"right": 0.33, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Data"
                pos_hint: {"right": 1, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Valor"
                pos_hint: {"right": 0.92, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True

        #SCROLL DE DESPESAS
        ScrollView:
            pos_hint: {"right": 0.99, "top": 0.80}
            size_hint: 0.98, 0.2
            GridLayout:
                cols: 1
                id: lista_pagamentos
                size_hint_y: None
                spacing: 3, 3
                height: self.minimum_height
                row_default_height: "20dp"
                row_force_default: True


        #TITULO BARRA DEVEDOR
        MDLabel:
            pos_hint: {"right": 0.85, "top": 0.59}
            size_hint: 0.7, 0.1
            text: "Devo a: 0.00"
            font_size: 14
            id: lbl_soma_div

        #BARRA DE TITULOS DEVEDOR
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.99, "top": 0.52}
            size_hint: 0.98, 0.035
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006d7e")
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDLabel:
                text: "Cod"
                pos_hint: {"right": 0.08, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Descrição"
                pos_hint: {"right": 0.33, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Data"
                pos_hint: {"right": 0.76, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True
            MDLabel:
                text: "Valor"
                pos_hint: {"right": 0.92, "top": 0.53}
                size_hint: 0.01, 0.1
                font_size: 13
                color:(0,0,0,1)
                bold: True

        #SCROLL DE DEVEDOR
        ScrollView:
            pos_hint: {"right": 0.99, "top": 0.47}
            size_hint: 0.98, 0.2
            GridLayout:
                cols: 1
                id: lista_dividas
                size_hint_y: None
                spacing: 3, 3
                height: self.minimum_height
                row_default_height: "20dp"
                row_force_default: True

        #EXCLUIR - BARRA DE TITULOS
        FloatLayout:
            rows: 1
            pos_hint: {"right": 0.99, "top": 0.24}
            size_hint: 0.98, 0.035
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006d7e")
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDLabel:
                pos_hint: {"right": 9, "top": 0.9}
                size_hint: 0.8, 0.8
                text: "Digite o Cod para excluir um item:"
                color: (1,1,1,1)
                id: lbl_aviso

        #INPUT E BOTAO EXCLUIR ITEM
        FloatLayout:
            rows: 1
            pos_hint: {"right": 0.99, "top": 0.22}
            size_hint: 0.98, 0.08
            TextInput:
                id: code_input
                hint_text: "Codigo"
                pos_hint: {"right": 0.4, "top": 0.5}
                size_hint: 0.3, 0.8
            Button:
                id: btn_excluir
                text: "Excluir"
                pos_hint: {"right": 0.9, "top": 0.5}
                size_hint: 0.3, 0.8
                on_release: app.apagar_item_lista(pgmt_user.text)


        #BOTAO VOLTAR PARA HOMEPAGE
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.09}
            size_hint: 1, 0.09
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006d7e")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text:"voltar"
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                on_release: app.pagar_conta(app.usuario)
            Button:
                text:"sair"
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                on_release: app.mudar_tela("homepage")
            MDLabel:
                text: ""
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
